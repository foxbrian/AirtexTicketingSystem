*{
overflow: hidden;
}

html{
padding: 0 0 0 0;
margin: 0 0 0 0;
}

body{
padding: 0 0 0 0;
margin: 0 0 0 0;
}

.tasksContainer{
margin: 2vh 0 0 10vw;
width: 80vw;

}

.stationButtonContainer{
position: fixed;
width: 8vw;
padding: 1vh .2vw 0 .2vw;
margin: 1vh 0 0 0;
border: .1vh solid black;
border-left:none;
border-radius: 0 5px 5px 0;
}
.stationButton{
border: .1vh solid black;
padding: .1vh .1vw .1vh .1vw;
margin-bottom: 1vh;
border-radius: 0 5px 5px 0;
}
.redClickable:hover{
	color: red;
	cursor: pointer;
}
.taskTable{
	border: 1px solid black;
	font-size: 1.2em;
	text-align:left;
	text-transform: capitalize;
}
.taskTable td{
	width: 15vw;
	padding: .1vh .1vw .1vh .1vw;
}
.taskTable tr:nth-child(even){
background-color: #
ffb6a8;
	
}
